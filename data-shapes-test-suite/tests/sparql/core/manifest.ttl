@prefix mf: <http://www.w3.org/2001/sw/DataAccess/tests/test-manifest#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix sht: <http://www.w3.org/ns/shacl-test#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

@prefix ex: <http://example.org/shacl-test/> .

<> a mf:Manifest ;
   rdfs:label "A set of tests for core-only implementations on SHACL-SPARQL shapes" ;
   rdfs:comment "Core-only implementations that don't check for SHACL-SPARQL constructs should result in no violations" ;
   mf:entries (
      <sparql-conform> <sparql-nonconform> <component-conform>  <component-nonconform> 
    ) .

<sparql-conform> rdf:type sht:Validate;
  rdfs:label "A sh:sparql shape where empty data graph conforms to shape" ;
  mf:action [ sht:dataGraph <sparql-conform-data.ttl> ;
              sht:shapesGraph <sparql-conform-shapes.ttl> ] ;
  mf:result [ rdf:type sh:ValidationReport ;
              sh:conforms "true"^^xsd:boolean ] ;
  mf:status sht:proposed .

<sparql-nonconform> rdf:type sht:Validate;
  rdfs:label "A sh:sparql shape where empty data graph does not conform to shape" ;
  mf:action [ sht:dataGraph <sparql-nonconform-data.ttl> ;
              sht:shapesGraph <sparql-nonconform-shapes.ttl> ] ;
  mf:result [ rdf:type sh:ValidationReport ;
              sh:conforms "false"^^xsd:boolean ;
	      sh:result [ rdf:type sh:ValidationResult ;
 	      		  sh:resultSeverity sh:Violation ;
 			  sh:focusNode ex:i ;
 			  sh:value ex:i ;
 			  sh:sourceShape ex:s1 ;
			  sh:sourceConstraint ex:c1 ;
 			  sh:sourceConstraintComponent sh:SPARQLConstraintComponent ] ] ;
  mf:status sht:proposed .

<component-conform> rdf:type sht:Validate;
  rdfs:label "A sparql component shape where empty data graph conforms to shape" ;
  mf:action [ sht:dataGraph <component-conform-data.ttl> ;
              sht:shapesGraph <component-conform-shapes.ttl> ] ;
  mf:result [ rdf:type sh:ValidationReport ;
              sh:conforms "true"^^xsd:boolean ] ;
  mf:status sht:proposed .

<component-nonconform> rdf:type sht:Validate;
  rdfs:label "A sparql component shape where empty data graph does not conform to shape" ;
  mf:action [ sht:dataGraph <component-nonconform-data.ttl> ;
              sht:shapesGraph <component-nonconform-shapes.ttl> ] ;
  mf:result [ rdf:type sh:ValidationReport ;
              sh:conforms "false"^^xsd:boolean ;
	      sh:result [ rdf:type sh:ValidationResult ;
 	      		  sh:resultSeverity sh:Violation ;
 			  sh:focusNode ex:i ;
 			  sh:value ex:i ;
 			  sh:sourceShape ex:s1 ;
 			  sh:sourceConstraintComponent ex:SillyConstraint ] ] ;
  mf:status sht:proposed .

