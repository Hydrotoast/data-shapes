@prefix ex: <http://example.org/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix dct:  <http://purl.org/dc/terms#> .
@prefix skos:     <http://www.w3.org/2004/02/skos/core#> .
@prefix foaf:     <http://xmlns.com/foaf/0.1/#> .

<>
	sh:shapesGraph <http://www.w3.org/ns/shacl> ;
.
ex:myPersonShape
    a sh:Shape ;
	sh:scopeClass foaf:Person ;
    sh:constraint [
        sh:or (
            [
                sh:property [
                    sh:predicate foaf:name ;
                    sh:minCount 1 ;
                    sh:maxCount 1 ;
                ]
            ]
            [
                sh:property [
                    sh:predicate foaf:forename  ;
                    sh:minCount 1 ;
                    sh:maxCount 1 ;
                ] ;
                sh:property [
                    sh:predicate foaf:lastname  ;
                    sh:minCount 0 ;
                    sh:maxCount 1 ;
                ]
            ]
        )
    ] ;
	sh:constraint [
		sh:closed true ;
		sh:ignoredProperties ( sh:nodeShape rdf:type ) ;
	] .


	# Instances -------------------------------------------------------------------
#ok
	ex:instance1  
		a foaf:Person ;
  		foaf:name "Harry";
	.
#ok	
	ex:instance2  
		a foaf:Person ; 
		foaf:forename "Harry" ;
		foaf:lastname "Smith" ;
	.
#bad	both name and lastname
	ex:instance3
		a foaf:Person ;
		foaf:name "Harry" ;
		foaf:lastname "Smith" ;
	.
#bad	forename required
	ex:instance4
		a foaf:Person ;
		foaf:lastname "Smith" ;
	.
#ok	
	ex:instance5
		a foaf:Person ;
		foaf:forename "Harry" ;
	.
#bad, neither name	
	ex:instance6
		a foaf:Person ;
	.
#bad, extra property
	ex:instance1  
		a foaf:Person ;
  		foaf:name "Harry";
		foaf:mbox "xx@yy" ;
	.