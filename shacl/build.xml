<?xml version="1.0" encoding="UTF-8"?>
<project name="GenerateShaclVocabulary" default="main">
	<description>
            Generate SHACL vocabulary from RDF Turtle source.
    </description>

	<!-- stylesheet.dir is the directory that stores the stylesheets -->
	<property name="stylesheet.dir" location="." />

	<!-- build-common.xml is the latest build-common.xml Ant script -->
	<property name="build-common.xml" location="${stylesheet.dir}/build-common.xml" />

	<import file="${build-common.xml}" />

	<!-- ================================= 
          target: main              
         ================================= -->

	<target name="main" depends="shacl-vocab" description="Convert RDF to HTML.">
	</target>

	<target name="shacl-vocab" description="Convert SHACL Turtle to HTML.">
		<delete file="shacl-vocab.rdf" />
		<delete file="shacl-vocab.html" />
		<ttl2html model="shacl-vocab" site="w3c" />
	</target>

</project>
